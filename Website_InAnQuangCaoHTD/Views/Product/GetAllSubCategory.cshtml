@model Website_InAnQuangCaoHTD.Models.SubCategory
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h3 class="mb-4"><i style="padding-right: 10px;" class="fas fa-layer-group"></i>Danh Mục: @Model.SubCategoryName</h3>
    <hr />

    @if (Model.Products != null && Model.Products.Any())
    {
        <h4 class="mt-4">Các sản phẩm</h4>
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm" style="border-radius: 10px; overflow: hidden;">
                        <img src="~/img/@product.ImageFileName" class="card-img-top" alt="@product.ProductName" style="object-fit: cover; height: 150px;">
                        <div class="card-body text-center">
                            <h6 class="card-title">@product.ProductName</h6>
                            <p class="card-text text-muted">@product.FormattedPrice</p>
                            <a href="@Url.Action("Details", "Product", new { id = product.ProductID })" class="btn btn-primary btn-sm">Xem Chi Tiết</a>
                            <a href="@Url.Action("Details", "Product", new { id = product.ProductID })" class="btn btn-success btn-sm">Đặt hàng</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Không có sản phẩm ở dây mục này.</p>
    }
</div>
